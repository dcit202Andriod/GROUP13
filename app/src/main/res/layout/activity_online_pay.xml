<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Online_Pay">


    <LinearLayout
        android:id="@+id/onLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:backgroundTint="#C6FF00"
            app:srcCompat="@drawable/backw"
            android:onClick="onlineBack"
            app:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="1dp"
            android:focusable="true" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="192dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:text="Online Payment"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onLin" />

    <Button
        android:id="@+id/button3"
        android:layout_width="186dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FF1744"
        android:text="PayPal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button5"
        android:layout_width="186dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00E676"
        android:text="Google Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1DE9B6"
        android:text="Amazon Pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="#FF9100"
        android:text="Apple Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>